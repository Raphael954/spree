  <main class="content">

    <!-- Dashboard -->
    <section id="dashboard" class="page active">
      <h1>Dashboard Overview</h1>
      <div class="stats-grid">
        <div class="card">
          <h3>Total Sales</h3>
          <p id="totalSales">â‚¦0</p>
        </div>
        <div class="card">
          <h3>Total Orders</h3>
          <p id="totalOrders">0</p>
        </div>
        <div class="card">
          <h3>Total Products</h3>
          <p id="totalProducts">0</p>
        </div>
        <div class="card">
          <h3>No. Of Registered Users</h3>
          <p id="noOfUsers"></p>
        </div>
      </div>
    </section>

    <!-- Sales -->
    <section id="sales" class="page">
      <h1>Sales Records</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Qty</th>
            <th>Total Profit</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody id="salesTable"></tbody>
      </table>
    </section>

    <!-- Add Product -->
    <section id="add-product" class="page">
      <h1>Add New Product</h1>
      <form id="addProductForm" class="form">
        <input type="text" name="name" placeholder="Product Name" required>
        <input text="number" name="price" placeholder="Price" required>
        <input type="text" name="group" placeholder="Category" required>
        <input type="text" name="brand" placeholder="Brand" required>
        <input type="text" name="stock" placeholder="Number in Stock" required>
        <textarea name="productDetails" placeholder="Product Details"></textarea>
        <textarea name="boxContent" placeholder="what's in the Box (add . after each content)" required></textarea>
        <textarea name="keyFeatures" placeholder="Key Features (add . after each feature)" required></textarea>
        <button type="submit">Add Product</button>
      </form>
    </section>

    <!-- Update Product -->
    <section id="update-product" class="page">
      <h1>Update Product</h1>

      <form id="updateProductForm" class="form">
        <input type="text" name="id" placeholder="Product ID" required>
        <input type="text" name="name" placeholder="New Name">
        <input type="text" name="price" placeholder="New Price">
        <input type="text" name="newStock" id="stock" placeholder="Add Stock">
        <button type="submit">Update</button>
      </form>
    </section>

    <!-- Delete Product-->
    <section id="delete-product" class="page">
      <h1>Delete Product</h1>

      <form id="deleteProductForm" class="form">
        <input type="text" name="id" placeholder="Input ID - Use this or Product Name">
        <input type="text" name="name" placeholder="Input Name - Use this or ID">
        <button type="submit">Delete</button>
      </form>
    </section>

    <section id="orders" class="page">
      <div class="orders-tabs">
        <button class="orders-tab" data-tab="all">All Orders</button>
        <button class="orders-tab" data-tab="placed">Placed Orders</button>
        <button class="orders-tab" data-tab="shipped">Shipped Orders</button>
        <button class="orders-tab" data-tab="ready">Ready for Delivery</button>
        <button class="orders-tab" data-tab="delivered">Delivered Orders</button>
      </div>

      <!-- Placeholder (visible until a tab clicked) -->
      <div id="orders-placeholder" class="orders-placeholder"><p>Select a tab to view orders.</p></div>

      <div id="tab-all" class="orders-tab-content">
        <table class="orders-table" id="table-all">
          <thead>
            <tr>
              <th>Order ID</th><th>Buyer Name</th><th>Telephone</th><th>Product Name</th><th>Unit Cost</th><th>Qty</th><th>Total Profit</th><th>Delivery Location</th><th>Order Date</th><th>Est. Delivery</th><th>Delivery Date</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>

      <div id="tab-placed" class="orders-tab-content">
        <table class="orders-table" id="table-placed">
          <thead>
            <tr>
              <th>Order ID</th><th>Buyer Name</th><th>Telephone</th><th>Product Name</th><th>Unit Cost</th><th>Qty</th><th>Total Profit</th><th>Delivery Location</th><th>Order Date</th><th>Est. Delivery</th><th>Action</th>
            </tr>
          </thead>
          <tbody></tbody>
        </table>
      </div>

      <div id="tab-shipped" class="orders-tab-content">
        <table class="orders-table" id="table-shipped">
          <thead>
            <tr>
              <th>Order ID</th><th>Buyer Name</th><th>Telephone</th><th>Product Name</th><th>Unit Cost</th><th>Qty</th><th>Total Profit</th><th>Delivery Location</th><th>Order Date</th><th>Est. Delivery</th><th>Action</th>
